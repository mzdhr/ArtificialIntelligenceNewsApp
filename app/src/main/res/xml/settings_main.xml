<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_section_by_default"
        android:entries="@array/settings_article_by_section_labels"
        android:entryValues="@array/settings_article_by_section_values"
        android:key="@string/settings_section_by_key"
        android:title="@string/settings_section_by_label" />

    <EditTextPreference
        android:defaultValue="@string/setting_article_number_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_article_number_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_article_number_label" />

</PreferenceScreen>